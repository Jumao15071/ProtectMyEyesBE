{
  //高亮容器名称
  "furnace_label": {
    "type": "label",
    "offset": [ 0, -3 ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "text": "$container_title",
    "color": [ 0.9, 0.9, 0.9 ],
    "layer": 4
  },

  //熔炉背景
  "furnace_panel/root_panel": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": {
          "bg@chest.bg_image":{
            "texture": "$bg_texture",
            "$bg_texture|default": "textures/ui/container_furnace",
            "fill": true,
            "layer": 3
          }
        }
      },
      {
        "control_name": "common_panel",
        "operation": "remove"
      },
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": {
          "close_button_panel": {
            "type": "panel",
            "size": [ "100%c", "100%" ],
            "anchor_from": "top_right",
            "anchor_to": "top_right",
            "bindings": [],
            "controls": [
              {
                "close_button@common.light_close_button": {
                  "size": [ 22, 22 ],
                  "offset": [ 0, 1 ],
                  "anchor_from": "top_right",
                  "anchor_to": "top_right"  
                }
              }
            ]
          }
        }
      }
    ]
  }

}
