{
  // Multiline Text //

  "command_block_text_edit_box@command_block.command_block_multiline_text_edit_box": {
    "enabled_newline": true,
    "bindings": [
      {
        "binding_name": "(not #maximized_input_visible)",
        "binding_name_override": "#enabled"
      }
    ]
  },
  // Auto Complete //

  "paste_button@common_buttons.light_glyph_button": {
    "ignored": true
  },

  "chat_paste_button@common_buttons.light_glyph_button": {
    "size": [ 30, 30 ],
    "layer": 1,
    "$button_content": "command_block.paste_icon",
    "$pressed_button_name": "command_block.paste",
    "$default_glyph_color": "$light_glyph_hover_color",
    "bindings": [
      {
        "binding_name": "(not #maximized_input_visible)",
        "binding_name_override": "#enabled"
      }
    ]
  },

  "command_block_screen_content": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "chat_paste_button@command_block.chat_paste_button": {
              "layer": 18,
              "anchor_from": "bottom_right",
              "anchor_to": "bottom_right",
              "size": [ 27, 27 ],
              "bindings": [
                {
                  "binding_name": "#minimize_button_visible_binding_name",
                  "binding_name_override": "#visible",
                  "binding_type": "global"
                }
              ]
            }
          },
          {
            "chat_autocomplete_back@chat.chat_autocomplete_back": {
              "layer": 18,
              "anchor_from": "bottom_right",
              "anchor_to": "bottom_right",
              "size": [ 27, 27 ],
              "bindings": [
                {
                  "binding_name": "#minimize_button_visible_binding_name",
                  "binding_name_override": "#visible",
                  "binding_type": "global"
                }
              ]
            }
          },
          {
            "chat_autocomplete@chat.chat_autocomplete": {
              "layer": 18,
              "anchor_from": "bottom_right",
              "anchor_to": "bottom_right",
              "size": [ 27, 27 ],
              "bindings": [
                {
                  "binding_name": "#minimize_button_visible_binding_name",
                  "binding_name_override": "#visible",
                  "binding_type": "global"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}