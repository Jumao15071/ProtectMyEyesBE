{
  // 显示物品名称
  "hover_button": {
    "modifications": [
      {
        "array_name": "bindings",
        "operation": "remove",
        "where": {
          "binding_name": "(not #using_touch)"
        }
      }
    ]
  },
  "trade_toggle_holder": {
    "size": ["100%", "100%c - 1px"],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "trade_icons_holder@trade2.toggle_content": {
              "size": ["100%", 0],
              "offset": [0, 4],
              "anchor_from": "top_middle",
              "anchor_to": "top_middle",
              "$template_toggle": "trade2.toggle_content"
            }
          }
        ]
      }
    ]
  },

  // 一键交易
  "top_half_stack_panel/trade_button_holder/trade_button": {
    "offset": [0, "-50%y"]
  },
  "top_half_stack_panel/trade_button_holder": {
    "size": ["100%cm", 0],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "tradeall_button@trade2.trade_button": {
              "ignored":"($rainbowpieui_bool)",//兼容彩虹派UI
              "$button_text": "dabu.ui.trade2.tradeall",
              "$pressed_button_name": "button.container_auto_place",
              "property_bag": {
                "#collection_name": "trade2_result_item",
                "#collection_index": 0
              },
              "offset": [0, "50%y"]
            }
          }
        ]
      }
    ]
  },

  // 去掉问号
  "how_to_play_button": {
    "ignored": true
  },

  // 显示未交易内容
  "tier_stack_panel": {
    "modifications": [
      {
        "array_name": "bindings",
        "where": {
          "binding_name": "#tier_visible",
          "binding_name_override": "#visible",
          "binding_type": "collection",
          "binding_collection_name": "$collection_name",
          "binding_condition": "always"
        },
        "operation": "remove"
      }
    ]
  },

  "trade_toggle": {
    "$toggle_enabled_binding_type": "none",
    "$toggle_enabled_binding_name": "none",
    "$unchecked_control": "trade2.trade_toggle_unchecked",
    "$checked_control": "trade2.trade_toggle_checked",
    "$unchecked_locked_control": "trade2.trade_toggle_locked",
    "$unchecked_locked_hover_control": "trade2.trade_toggle_locked",
    "$checked_locked_control": "trade2.trade_toggle_locked",
    "$checked_locked_hover_control": "trade2.trade_toggle_locked"
  }
}